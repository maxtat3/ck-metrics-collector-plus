<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="berthold.filedialog.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/path"
        android:background="@color/colorLightGrey"
        android:hint="@string/path_display_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pick_a_file_to_load_button"
        android:text="@string/pick_a_file_to_load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_a_file_to_load_description"/>
    <Button
        android:id="@+id/pick_save_loc_button"
        android:text="@string/pick_save_loc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_save_loc_description"/>
    <CheckBox
        android:id="@+id/override_last_path_visited"
        android:paddingTop="20dp"
        android:text="@string/reset_last_loc_visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
