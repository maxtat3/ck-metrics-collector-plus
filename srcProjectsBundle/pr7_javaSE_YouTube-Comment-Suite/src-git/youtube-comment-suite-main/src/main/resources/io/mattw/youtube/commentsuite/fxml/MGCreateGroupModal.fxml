<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="VBox"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         spacing="10">
    <fx:include source="AlertLabel.fxml" styleClass="alertWarning"
                fx:id="errorMsg"
                alignment="CENTER" managed="false" />
    <TextField fx:id="nameField" promptText="Enter name here!" />
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnClose" styleClass="btnLight" text="Close" />
        <Button fx:id="btnSubmit" styleClass="btnPrimary" text="Create" />
    </HBox>
</fx:root>
