<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_home_grid_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_folder_black_24dp" />

    <TextView
        android:id="@+id/tv_home_grid_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:maxLines="1"
        android:textColor="@color/dark"
        app:layout_constraintEnd_toStartOf="@+id/iv_home_grid_more"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_home_grid_pic"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_grid_pic"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/iv_home_grid_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_grid_name"
        app:layout_constraintEnd_toEndOf="@+id/iv_home_grid_pic"
        app:layout_constraintTop_toTopOf="@+id/tv_home_grid_name"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>